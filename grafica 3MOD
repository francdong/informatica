    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scacchiera</title>
    <style>
      #input2{
        
      }
        .board-row {
            position: relative;
            display: flex;
            flex-wrap: wrap;
        }

        .square {
          margin-left: 10px;
          margin-top: 10px;
            width: 10px;
            height: 10px;
            border: 1px solid black;
            box-sizing: border-box;
            position: relative; /* Aggiungi questa riga */
        }

        .allimg-container {
            position: absolute;
            top: -9px;
            left: -1px;
            width: 10px;
            height: 10px;
        }

        .square.black {
            background-color: black;
            z-index: 1;
        }

        .square.black .fiore-container {
            z-index: 2; /* Aggiungi questa riga */
        }
    </style>
  <p id="ciao"></p>
  <input type="number" id="numeroDiv" />
</head>
<body>
    <script>
      var ncas = Math.floor(Math.random()*3);
      document.getElementById("ciao").innerHTML = ncas;
      var contnum ;

      
        function creaScacchiera(numeroDiv) {
          contnum = document.getElementById("numeroDiv").value;
          contnum = contnum * 2 ;

            var container = document.body;
          
            var board = document.createElement("div");
            board.className = "board";

            for (var i = 0; i < numeroDiv; i++) {
                var boardRow = document.createElement("div");
                boardRow.className = "board-row";

                for (var j = 0; j < numeroDiv; j++) {
                    var square = document.createElement("div");
                    square.className = "square";

                    if ((i + j) % 2 === 0) {
                        square.style.backgroundColor = "white";
                    } else {
                        square.style.backgroundColor = "black";
                        square.classList.add("black");

                        const imageContainer = document.createElement("div");
                        imageContainer.className = "allimg-container";

                       while (contnum > 1){
                         contnum--;
                         if (ncas==3 || ncas==0){
                            var chose1=document.createElement("button");
                            var chose2=document.createElement("button");
                           imageContainer.appendChild(chose1 & chose2);
                          }
                         if (ncas==2){
                           const fioreImg = document.createElement("img");
                           fioreImg.src = "fiore.png";
                           fioreImg.style.width = "100%";
                           fioreImg.style.height = "100%";
                           imageContainer.appendChild(fioreImg);
                         }
                         if (ncas==1){
                            const romanImg = document.createElement("img");
                            romanImg.src = "roman.png";
                           romanImg.style.width = "100%";
                           romanImg.style.height = "100%";
                            imageContainer.appendChild(romanImg);
                          }
                       } 
                      ncas = Math.floor(Math.random()*3);
                      document.getElementById("ciao").innerHTML = ncas;
                        

                        square.appendChild(imageContainer);
                    }

                    boardRow.appendChild(square);
                }

                board.appendChild(boardRow);
            }

            container.appendChild(board);
          
        }
      
      

      
    </script>
  

    <label for="numeroDiv">Inserisci il numero di div per riga:</label>
    
    <button onclick="creaScacchiera(document.getElementById('numeroDiv').value)">Crea Scacchiera</button>
</body>
</html>
